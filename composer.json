{
    "name": "nails/module-cdn",
    "keywords": ["Nails", "Shed Collective", "CodeIgniter", "CDN Module"],
    "homepage": "http://nailsapp.co.uk/modules/cdn",
    "description": "This is the \"CDN\" module for Nails.",
    "license": "MIT",
    "authors":
    [
        {
            "name": "Pablo de la Pena",
            "email": "p@nailsapp.co.uk",
            "homepage": "http://nailsapp.co.uk",
            "role": "Developer"
        },
        {
            "name": "Gary Duncan",
            "email": "g@nailsapp.co.uk",
            "homepage": "http://nailsapp.co.uk",
            "role": "Developer"
        }
    ],
    "support":
    {
        "email": "hello@nailsapp.co.uk"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [{
        "type": "vcs",
        "url": "https://github.com/hellopablo/PHPThumb"
    }],
    "require":
    {
        "nails/common": "dev-develop",
        "nails/driver-cdn-local": "dev-develop",
        "sybio/gif-creator": "~1.0.0",
        "sybio/gif-frame-extractor": "~1.0.0",
        "masterexploder/phpthumb": "dev-master"
    },
    "require-dev":
    {
        "phpunit/phpunit": "4.*"
    },
    "autoload":
    {
        "psr-4": {"Nails\\Cdn\\": "src/"}
    },
    "extra":
    {
        "nails" :
        {
            "moduleName": "cdn",
            "type": "module",
            "namespace": "Nails\\Cdn\\",
            "autoload": {
                "helpers": ["cdn"]
            },
            "data": {
                "nails/module-admin": {
                    "autoload": {
                        "assets": {
                            "js": [
                                "admin.objectpicker.js"
                            ],
                            "css": [
                                "admin.objectpicker.min.css"
                            ]
                        }
                    }
                },
                "nails/module-api": {
                    "namespace": "cdn",
                    "controller-map": {
                        "Object": "CdnObject"
                    }
                },
                "nails/module-cdn": {
                    "permitted-image-dimensions": [
                        "100x100",
                        "150x150",
                        "400x400"
                    ]
                }
            }

        }
    }
}
